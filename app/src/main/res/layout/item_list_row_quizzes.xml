<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="0dp">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_border"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/quizItemTitle"
            android:id="@+id/quizItemImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:scaleType="fitStart"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="33%" />

        <TextView
            android:id="@+id/quizItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/quizItemImage"
            android:layout_toRightOf="@id/quizItemImage"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liveWellTitleColor"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="64%" />

        <TextView
            android:id="@+id/quizItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizItemTitle"
            android:layout_toEndOf="@id/quizItemImage"
            android:layout_toRightOf="@id/quizItemImage"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/liveWellBodyTextColor"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="64%" />




    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>
